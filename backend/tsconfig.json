{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/backend",
    "rootDir": "../",
    "module": "node16",
    "target": "ES2022",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "noEmit": false,
    "baseUrl": "../",
    "paths": {
      "@integrations/*": ["src/integrations/*"]
    },
    "types": ["node", "express"]
  },
  "include": ["**/*.ts", "../src/**/*.ts"],
  "exclude": ["node_modules"]
}
